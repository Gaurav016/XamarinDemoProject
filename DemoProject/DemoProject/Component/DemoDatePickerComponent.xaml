<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoProject.Component.DemoDatePickerComponent">
    <ContentView.Content>
        <StackLayout Padding="20">
            <Label x:Name="headlabel" TextColor="Blue" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand"/>
            <DatePicker x:Name="datepicker" TextColor="Black"></DatePicker>
            <Label x:Name="errorline"></Label>
        </StackLayout>
    </ContentView.Content>
</ContentView>