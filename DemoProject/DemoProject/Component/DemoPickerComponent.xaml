<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoProject.Component.DemoPickerComponent">
  <ContentView.Content>
      <StackLayout Padding="20">
            <Label x:Name="headlabel" TextColor="Blue" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand"/>
            <Picker x:Name="picker" Title="Nationality" SelectedItem="{Binding SelectedText}" TextColor="Black"></Picker>
            <Label x:Name="errorline"></Label>
        </StackLayout>
  </ContentView.Content>
</ContentView>