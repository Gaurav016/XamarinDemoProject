<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoProject.Component.DemoEntryComponent">
  <ContentView.Content>
      <StackLayout Padding="20">
            <Label x:Name="headlabel" TextColor="Blue" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand"/>
            <Entry x:Name="entry" Text="{Binding DemoEntry}"></Entry>
            <Label x:Name="errorline"></Label>
      </StackLayout>
  </ContentView.Content>
</ContentView>