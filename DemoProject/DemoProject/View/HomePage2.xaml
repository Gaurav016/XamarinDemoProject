<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoProject.View.HomePage2"
             xmlns:component="clr-namespace:DemoProject.Component"
             BackgroundColor="#e8e6e3">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="10">
                <component:DemoEntryComponent x:Name="name" DemoLabel="Name" DemoEntry="{Binding profileData.Name,Mode=TwoWay}" ></component:DemoEntryComponent>
                <component:DemoPickerComponent x:Name="nationality" DemoLabel="Nationality" DemoPicker="{Binding nationalitylist}" SelectedText="{Binding profileData.Nationality,Mode=TwoWay}" ></component:DemoPickerComponent>
                <component:DemoDatePickerComponent x:Name="DOB" DemoLabel="D.O.B"></component:DemoDatePickerComponent>
                <component:DemoEntryComponent x:Name="maritalstatus" DemoLabel="Marital Status" DemoEntry="{Binding profileData.MaritalStatus,Mode=TwoWay}" ></component:DemoEntryComponent>
                <component:DemoEntryComponent x:Name="gender" DemoLabel="Gender" DemoEntry="{Binding profileData.Gender,Mode=TwoWay}"></component:DemoEntryComponent>
                <Button Text="Submit" Command="{Binding GetDataCommand}"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>