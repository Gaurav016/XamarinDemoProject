<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoProject.View.HomePage1"
             BackgroundColor="#e8e6e3">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="menulist" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell >
                            <Label Text="{Binding Name}" HorizontalOptions="CenterAndExpand" VerticalTextAlignment="Center" TextColor="Black"></Label>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>